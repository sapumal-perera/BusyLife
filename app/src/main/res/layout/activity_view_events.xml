<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"
    tools:context="com.emperia.isurup.busylife.View">

    <TextView
        android:layout_width="417dp"
        android:layout_height="60dp"
        android:id="@+id/viewTopic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:textSize="25sp"
        android:textColor="#180181"
        android:textStyle="bold"
        android:background="#088051" />

    <TextView
        android:layout_width="417dp"
        android:layout_height="54dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:id="@+id/viewHead"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="#299319"
        android:textColor="#000000"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewTopic" />


    <TextView
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:editable="false"
        android:id="@+id/viewAppointment"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/viewHead"
        android:layout_marginRight="36dp"
        android:textColor="#180181"
        android:textStyle="bold|italic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        android:layout_marginEnd="36dp" />

    <EditText
        android:textColorHint="#1E0A7C"
        android:inputType="number"
        android:layout_width="239dp"
        android:layout_height="58dp"
        android:background="@drawable/border_event"
        android:hint=" enter the event id.."
        android:textColor="#1E0A7C"
        android:id="@+id/selectAppoinment"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/viewAppointment"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />


    <Button
        android:textStyle="bold"
        android:layout_width="88dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@+id/selectAppoinment"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/selectAppoinment"
        android:layout_marginBottom="8dp"
        android:text="Done"
        android:id="@+id/btnSelectAppointment"
        android:background="#902EC7"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="selectAction"
        android:layout_marginEnd="16dp" />

    <TextView
        android:textAlignment="center"
        android:layout_width="370dp"
        android:textColor="#1E0A7C"
        android:layout_height="57dp"
        android:id="@+id/informText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>
