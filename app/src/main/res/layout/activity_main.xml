<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emperia.isurup.busylife.CalenderView">


    <CalendarView
        android:id="@+id/pickdate"
        android:layout_width="445dp"
        android:layout_height="352dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:maxDate="12/31/2028"
        android:minDate="12/31/2017"
        android:showWeekNumber="true"
        android:weekNumberColor="#DE19A8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchET"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="77dp" />

    <Button
        android:id="@+id/move"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="8dp"
        android:background="#04EBF6"
        android:text="Move Appointment  "
        android:textAllCaps="false"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="@+id/delete" />

    <Button
        android:id="@+id/viewedit"
        android:layout_width="180dp"

        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="16dp"
        android:background="#CE3FF8"
        android:text="Show Appointment  "
        android:textAllCaps="false"
        android:textStyle="italic"

        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/delete" />

    <Button
        android:id="@+id/create"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginBottom="-13dp"
        android:layout_marginRight="-10dp"
        android:background="#2DF604"
        android:text="Add Appointment  "
        android:textAllCaps="false"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/viewedit"
        app:layout_constraintRight_toLeftOf="@+id/move" />

    <Button
        android:id="@+id/delete"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:background="#FA2E21"
        android:text="Remove Appointment  "
        android:textAllCaps="false"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/viewedit"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/searchET"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_marginLeft="8dp"
        android:hint="@string/find_your_event_easier"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="9dp"
        tools:layout_editor_absoluteX="5dp"
        app:layout_constraintTop_toBottomOf="parent"
        />


    <Button
        android:id="@+id/searchBtn"
        android:layout_width="93dp"
        android:layout_height="34dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="#2131FA"
        android:text="FIND"
        android:textColor="#ffffff"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/searchET"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>

