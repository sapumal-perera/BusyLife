<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.emperia.isurup.busylife.Move">

    <TextView
        android:background="#338007"
        android:layout_width="408dp"
        android:layout_height="101dp"
        android:text="\n\t   Move Your Event!"
        android:textSize="30dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:id="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-5dp"
        app:layout_constraintHorizontal_bias="0.461" />


    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        android:layout_marginStart="8dp"
        android:minDate = "12/31/2017"
        android:layout_marginEnd="8dp"
        android:maxDate ="12/31/2018"
        app:layout_constraintHorizontal_bias="0.431"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/calendarUpdate">

    </CalendarView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:id="@+id/movebtn"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#C51162"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/calendarUpdate"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/calendarUpdate" />

</android.support.constraint.ConstraintLayout>
