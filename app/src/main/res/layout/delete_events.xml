<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E2E8E6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.emperia.isurup.busylife.CalenderView">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DELETE EVENTS"
        android:textAlignment="center"
        android:textColor="#240008"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/delAllText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text="\n\n Delete All Event(s) for the day\n"
        android:textAlignment="center"
        android:textColor="#240008"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <Button
        android:id="@+id/delAll"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#F5093B"
        android:text="DELETE ALL"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/delSeltext"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/delSeltext"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/delAllText" />


    <TextView
        android:id="@+id/delSeltext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text="Delete selected event \n"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/delAll"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <Button
        android:id="@+id/delSel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#8C05E4"
        android:text="SELECT TO DELETE"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/delSeltext"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/delSeltext"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/delSeltext"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/delSel" />


</android.support.constraint.ConstraintLayout>
